@using DotNet.Common;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
     <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">  
    <title>系统登陆</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="描述写在这" />
    <meta name="keywords" content="关键字写在这" />
    <meta name="author" content="Codrops" />
    <link href="@RouteHelper.StaticSite/css/LoginCSS/demo.css" rel="stylesheet" />
    <link href="@RouteHelper.StaticSite/css/LoginCSS/style.css" rel="stylesheet" />
    <link href="@RouteHelper.StaticSite/css/LoginCSS/animate-custom.css" rel="stylesheet" />
    <link rel="shortcut icon" href="@RouteHelper.StaticSite/images/favicon.ico">
    <script>
        document.domain = "localhost";
    </script>
</head>
<body>
    <div class="container">
        <!-- 页眉 -->
        <div class="codrops-top">
            <a href="#">
                <strong>&laquo; Designed By: </strong>Mr_Han
            </a>
            <span class="right">
                <a href="#">
                    <strong>返回</strong>
                </a>
            </span>
            <div class="clr"></div>
        </div>
        <!--/ 页眉 -->
        <header>
            <h1>Welcome to My <span>MVC System</span></h1>
            <nav class="codrops-demos">
            </nav>
        </header>
        <section>
            <div id="container_demo">
                <a class="hiddenanchor" id="toregister"></a>
                <a class="hiddenanchor" id="tologin"></a>
                <div id="wrapper">
                    <div id="login" class="animate form">
                        @using (Ajax.BeginForm("CheckLogin", new AjaxOptions() { OnSuccess = "AfterSubmit", OnBegin = "DisableButton" }))
                        {
                            <h1>登录</h1>
                            <p>
                                <label for="username" class="uname" data-icon="u"> 用户名 </label>
                                <input id="username" name="loginId" required="required" type="text" placeholder="请输入您的用户名 或 电子邮件地址" />
                            </p>
                            <p>
                                <label for="password" class="youpasswd" data-icon="p"> 密码 </label>
                                <input id="password" name="loginPwd" required="required" type="password" placeholder="eg. X8df!90EO" />
                            </p>
                            <p>
                                <label for="VCode" class="vcode"> 验证码 </label>
                                <br />
                                <input type="hidden" name="loginCity" id="hideCity" value=city />
                                <span id="VCode">
                                    <input id="vCode" name="vCode" required="required" style="width: 150px" type="text" placeholder="eg. 0000" />&nbsp;&nbsp;
                                    <img style="position: absolute;top: 285px" id="img" src="/Admin/Login/ShowVCode?id=1111" onclick="ChangeCheckCode();return false;" title="点击更换验证码" alt="验证码" />
                                </span>
                            </p>
                            <p class="keeplogin">
                                <input type="checkbox" name="loginkeeping" id="loginkeeping" value="loginkeeping" />
                                <label for="loginkeeping">记住我</label>
                            </p>
                            <p class="login button">
                                <input type="submit" id="loginBtn" value="登录" />
                            </p>
                            <p class="change_link">
                                还没注册 ?
                                <a href="#toregister" class="to_register">加入我们</a>
                            </p>
                        }
                    </div>

                    @********************注册表单**********************@

                    <div id="register" class="animate form">
                        @using (Ajax.BeginForm("Registe", new AjaxOptions() { OnSuccess = "AfterSign", OnBegin = "DisableSign" }))
                        {
                            <h1> 注册 </h1>
                            <p>
                                <label for="useridsignup" class="uname" data-icon="u">账号</label>
                                <input id="useridsignup" name="useridsignup" required="required" type="text" placeholder="eg:xiaoming123" />
                            </p>
                            <p>
                                <label for="usernamesignup" class="uname" data-icon="u">用户名</label>
                                <input id="usernamesignup" name="usernamesignup" required="required" type="text" placeholder="eg:李磊" />
                            </p>
                            <p>
                                <label for="emailsignup" class="youmail" data-icon="e"> E-Mail</label>
                                <input id="emailsignup" name="emailsignup" required="required" type="email" placeholder="eg:mysupermail@mail.com" />
                            </p>
                            <p>
                                <label for="passwordsignup" class="youpasswd" data-icon="p">密码 </label>
                                <input id="passwordsignup" name="passwordsignup" required="required" type="password" placeholder="eg: X8df!90EO" />
                            </p>
                            <p>
                                <label for="passwordsignup_confirm" class="youpasswd" data-icon="p">确认密码 </label>
                                <input id="passwordsignup_confirm" name="passwordsignup_confirm" required="required" type="password" placeholder="eg: X8df!90EO" />
                            </p>
                            <p class="signin button">
                                <input type="submit" id="sign" value="注册" />
                            </p>
                            <p class="change_link">
                                已经注册 ?
                                <a href="#tologin" class="to_register"> 前去登录 </a>
                            </p>
                        }
                    </div>

                </div>
            </div>
        </section>
    </div>
    <script src="@RouteHelper.StaticSite/CommonLib/Scripts/jquery-1.10.2.min.js"></script>
    <script src="@RouteHelper.StaticSite/CommonLib/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="@RouteHelper.StaticSite/PageScript/AdminLoginScript.js"></script>
</body>
</html>

